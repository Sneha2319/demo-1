 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-dark"><b>Patient Name</b></label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter Patient Name">
        </div>
         <div class="form-group">
            <label for="Main Complaint" class="text-bold"><b>Main Complaint</b></label>
            <input type="text" name="main_complaint" value="" placeholder="Enter Complaint">
        </div>
        <div class="form-group">
            <label for="History" class="text"><b>Past History</b></label>
            <div class="form-group">
            <select multiple class="form-control" id="past_history" name="past_history[]">
                            <option value="diabetes">Diabetes</option>
                            <option value="tuberculosis">Tuberculosis</option>
                            <option value="Cancer">Cancer</option>
                            <option value="Other">Other</option>
                </select>
            </div>
            </div>
    
            <div class="form-group" >
           
                <label for="bp" class="text"><b>Blood Pressure</b></label>
                <select class="form-control" id="bp" name="bp">
                    <option value="low">Low</option>
                    <option value="moderate">Moderate</option>
                    <option value="high">High</option>
                </select>
            </div>
            <div class="form-group">
                <label for="pulse_rate" class="text"><b>Pulse Rate</b></label>
                <select class="form-control" id="pulse_rate" name="pulse_rate">
                    <option value="low">Low</option>
                    <option value="moderate">Moderate</option>
                    <option value="high">High</option>
                </select>
            </div>
            <div>

                <label for="date"><b>LMP</b>:</label>
                <input type="date" id="d" name="lmp">
           
            </div>
               <div class="form-group">
                <label for="Investigation" class="text-dark"><b>Investigation</b></label>
                <input type="hidden" name="id" value="">
                <input type="text" name="investigation" value="" placeholder="Investigation">
            </div>
            <div class="form-group">
                <label for="name" class="text-dark"><b>Treatment Given</b></label>
                <input type="hidden" name="id" value="">
                <input type="text" name="treatment_given" value="" placeholder="Treatment Given">
            </div>      
            
        </div> 
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>